@model ZeiterfassungViewModel

@{
    ViewData["Title"] = "Zeiterfassung";
    Layout = null; // Remove this if using a shared layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TimeManager</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Geist:wght@400;500;600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

    <link rel="stylesheet" href="~/css/Site.css" />

</head>
<body>

<div class="dashboard-container">
    
    <aside class="sidebar text-white">
        <div class="sidebar-header mb-5">
            <h3 class="text-white">Small Tech & Company</h3>
            <p class="text-white">TimeManager</p>
        </div>
        <nav class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home ></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Roles ></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="VacationRequest" asp-controller="VacationRequest" asp-action="Index">Vacation Time ></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Settings ></a>
            </li>
        </nav>
        <a class="logout-link nav-link" asp-area="" asp-controller="Account" asp-action="Logout">
            <i class="fas fa-sign-out-alt me-2"></i> Log out
        </a>
    </aside>

    <main class="main-content flex-grow-1">
        
        <header class="main-header d-flex justify-content-between align-items-center">
            <div class="search-bar">
                <input type="text" class="form-control" placeholder="ðŸ” Search">
            </div>
            <div class="user-info d-flex align-items-center">
                <span class="welcome-text me-3 text-white-50">Welcome Back, **Admin_Username**</span>
                <i class="fas fa-cog me-2"></i> 
                <i class="fas fa-bell me-2"></i>
                <div class="user-avatar"></div> </div>
        </header>

        <div class="status-tiles d-flex mb-4">
            <div class="tile card p-3 flex-fill me-3 d-flex align-items-center">
                <h5 class="text-white mb-0"><i class="fas fa-chevron-right me-2"></i> Today, (DD/MM/YYYY)</h5>
            </div>
            
            <div class="tile card p-3 flex-fill me-3">
                <p class="mb-1">Active Employees</p>
                <h4>140</h4> 
            </div>
            
            <div class="tile card p-3 flex-fill me-3">
                <p class="mb-1">Hours worked</p>
                <h4>3,279</h4> 
            </div>
            
            <div class="tile card p-3 flex-fill me-3">
                <p class="mb-1">Meetings scheduled (This week)</p>
                <h4>4</h4>
            </div>
            
            <div class="tile card p-3 flex-fill">
                <p class="mb-1">Employees in vacation</p>
                <h4>12</h4>
            </div>
        </div>

        <div class="card p-3 mb-4">
            <h5>Working Hours Overview</h5>
            <div class="chart-placeholder"></div>
        </div>

        <div class="row g-3">
            
            <div class="col-md-4">
                <div class="card p-3 h-100">
                    <h5>Time tracking input</h5>
                    <form>
                        <div class="mb-3">
                            <label asp-for="InputStartTime" class="form-label text-white">Start time</label>
                            <input asp-for="InputStartTime" type="time" class="form-control bg-dark-input" />
                            <span asp-validation-for="InputStartTime" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="InputEndTime" class="form-label text-white">End time</label>
                            <input asp-for="InputEndTime" type="time" class="form-control bg-dark-input" />
                            <span asp-validation-for="InputEndTime" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="InputDescription" class="form-label text-white">Description (optional)</label>
                            <textarea asp-for="InputDescription" class="form-control bg-dark-input" rows="3"></textarea> 
                        </div>
                        <button type="submit" class="btn btn-primary w-100 mt-2 bg-dark-submit">Enter</button>
                    </form>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card p-3 h-100 d-flex flex-column">
                    <h5>Today's working time</h5>
                    <table class="table table-borderless text-white flex-grow-1">
                        <tbody>
                            <tr>
                                <td class="category-label working-time-color">Working Time</td>
                                <td>8:00 - 13:00</td>
                                <td class="text-end fw-bold">5 Hours</td>
                            </tr>
                            <tr>
                                <td class="category-label break-time-color">Break Time</td>
                                <td>13:00 - 14:00</td>
                                <td class="text-end fw-bold">1 Hour</td>
                            </tr>
                            <tr>
                                <td class="category-label working-time-color">Working Time</td>
                                <td>14:00 - 17:00</td>
                                <td class="text-end fw-bold">3 Hours</td>
                            </tr>
                            <tr>
                                <td class="category-label overtime-color">Overtime</td>
                                <td>17:00 - 18:30</td>
                                <td class="text-end fw-bold">1.5 Hours</td>
                            </tr>
                        </tbody>
                    </table>
                    <hr class="mt-auto">
                    <p class="fw-bold mb-0">Total hours worked: 9.5 hours</p> 
                </div>
            </div>

            <div class="col-md-4">
                <div class="card p-3 h-100 d-flex flex-column">
                    <h5>Projects worked on</h5>
                    <div class="project-item mb-3">
                        <p class="mb-0 fw-bold">(Product application)</p>
                        <small>(Description) - *[Time remaining]*</small>
                    </div>
                    <div class="project-item mb-3">
                        <p class="mb-0 fw-bold">(Product application)</p>
                        <small>(Description) - *[Time remaining]*</small>
                    </div>
                    <div class="project-item mb-3">
                        <p class="mb-0 fw-bold">(Product application)</p>
                        <small>(Description) - *[Time remaining]*</small>
                    </div>
                    <div class="project-item mb-3">
                        <p class="mb-0 fw-bold">(Description)</p>
                        <small>* (Description) - [Time remaining]*</small>
                    </div>
                </div>
            </div>

        </div>
    </main>
    
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
