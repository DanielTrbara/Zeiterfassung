@model WebApplication1.Areas.VacationRequest.Model.VacationRequestModel
@{
    ViewData["Title"] = "Urlaubsantrag";
}

<div class="dashboard-container d-flex">
    
    <aside class="sidebar bg-dark text-white p-3">
        <div class="sidebar-header mb-4">
            <h3 class="text-white">Small Tech & Company</h3>
            <p class="text-muted">TimeManager</p>
        </div>
        <nav class="nav flex-column">
            <a class="nav-link text-white-50" href="#">Home ></a>
            <a class="nav-link text-white-50" href="#">Roles ></a>
            <a class="nav-link text-white-50 active" href="#">Vacation ></a>
            <a class="nav-link text-white-50" href="#">Vacation Overview ></a>
            <a class="nav-link text-white-50" href="#">Settings ></a>
        </nav>
        <div class="log-out-section position-absolute bottom-0 mb-4">
            <a class="nav-link text-danger" href="#">‚û°Ô∏è Log out</a>
        </div>
    </aside>

    <main class="main-content flex-grow-1 p-4 bg-light-gray">
        
        <header class="main-header d-flex justify-content-between align-items-center mb-5">
            <div class="search-bar">
                <input type="text" class="form-control" placeholder="üîç Search">
            </div>
            <div class="user-info d-flex align-items-center">
                <i class="fas fa-cog me-2"></i> 
                <i class="fas fa-bell me-2"></i> 
                <span class="user-name">Admn_Username</span>
                 
            </div>
        </header>

        <div class="card p-5 shadow-sm border-0">
            
            <div class="card-header bg-white border-0 p-0 mb-3">
                <h2 class="h5 mb-1">Vacation Request</h2>
                <p class="text-muted small">
                    Fill out the **Vacation request**. The HR/Supervisor will view your request later.
                </p>
                <p class="text-danger small">
                    * Policy required: max 2 weeks mandatory
                </p>
            </div>
            
            <form method="post">
                
                <div class="row mb-4 align-items-end">
                    
                    <div class="col-md-3">
                        <label for="dateFrom" class="form-label text-muted small">Date (from)</label>
                        <input type="date" 
                               class="form-control" 
                               id="dateFrom" 
                               value="10-NOV-YYYY" 
                               placeholder="DD-MM-YYYY" />
                    </div>
                    
                    <div class="col-md-3">
                        <label for="dateTo" class="form-label text-muted small">Date (to)</label>
                        <input type="date" 
                               class="form-control" 
                               id="dateTo" 
                               value="15-NOV-YYYY" 
                               placeholder="DD-MM-YYYY" />
                    </div>
                </div>

                <div class="mb-4">
                    <label for="reason" class="form-label small">Reason*</label>
                    <textarea class="form-control" id="reason" rows="10" required></textarea>
                </div>
                
                <button type="submit" class="btn btn-dark request-button">
                    Request vacation
                </button>
                
            </form>
        </div>

    </main>

</div>