@model WebApplication1.Areas.VacationRequest.Model.VacationRequestModel
@{
    ViewData["Title"] = "Urlaubsantrag";
}

<div class="dashboard-container d-flex">

    <main class="main-content flex-grow-1 p-4 bg-light-gray">

        <div class="card p-5 shadow-sm border-0">
            
            <div class="card-header bg-white border-0 p-0 mb-3">
                <h2 class="h5 mb-1">Vacation Request</h2>
                <p class="text-muted small">
                    Fill out the **Vacation request**. The HR/Supervisor will view your request later.
                </p>
                <p class="text-danger small">
                    * Policy required: max 2 weeks mandatory
                </p>
            </div>
            
            <form asp-area="VacationRequest"
                  asp-controller="VacationRequest"
                  asp-action="Index"
                  method="post">

                <div class="row mb-4 align-items-end">
                    <div class="col-md-3">
                        <label asp-for="DateFrom" class="form-label text-muted small"></label>
                        <input asp-for="DateFrom" class="form-control" type="date" />
                        <span asp-validation-for="DateFrom" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="DateTo" class="form-label text-muted small"></label>
                        <input asp-for="DateTo" class="form-control" type="date" />
                        <span asp-validation-for="DateTo" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="Reason" class="form-label small"></label>
                    <textarea asp-for="Reason" class="form-control" rows="10"></textarea>
                    <span asp-validation-for="Reason" class="text-danger"></span>
                </div>
    
                <button type="submit" class="btn btn-dark request-button">
                    Request vacation
                </button>

            </form>

        </div>

    </main>

</div>